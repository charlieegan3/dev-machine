{
  "variables": {
    "token": "{{env `DIGITALOCEAN_API_TOKEN`}}",
    "commit_sha": "{{env `COMMIT_SHA`}}",
    "username": "charlieegan3",
    "password": "{{env `PASSWORD`}}",
    "id_rsa": "{{env `B64_ID_RSA`}}",
    "id_rsa_pub": "{{env `B64_ID_RSA_PUB`}}",
    "gpg_pub": "{{env `B64_GPG_PUB`}}",
    "gpg_priv": "{{env `B64_GPG_PRIV`}}",
    "github_token": "{{env `GITHUB_ACCESS_TOKEN`}}"
  },
  "builders": [
    {
      "droplet_name": "dev",
      "snapshot_name": "dev-machine-{{user `commit_sha`}}",
      "type": "digitalocean",
      "api_token": "{{user `token`}}",
      "image": "ubuntu-18-04-x64",
      "region": "nyc3",
      "size": "2gb",
      "ssh_username": "root"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "scripts/install_ufw.sh"
    },
    {
      "type": "shell",
      "script": "scripts/config_user.sh",
      "environment_vars": [
        "USERNAME={{ user `username`}}",
        "PASSWORD={{ user `password`}}",
        "ID_RSA={{ user `id_rsa`}}",
        "ID_RSA_PUB={{ user `id_rsa_pub`}}",
        "GPG_PUB={{user `gpg_pub`}}",
        "GPG_PRIV={{user `gpg_priv`}}",
        "GITHUB_TOKEN={{user `github_token`}}"
      ]
    },
    {
      "type": "file",
      "source": "dotfiles",
      "destination": "/home/{{user `username`}}/dotfiles"
    },
    {
      "type": "shell",
      "script": "scripts/install_tools.sh"
    },
    {
      "type": "shell",
      "script": "scripts/install_runtimes.sh"
    },
    {
      "type": "shell",
      "script": "scripts/install_docker.sh",
      "environment_vars": [
        "USERNAME={{ user `username`}}"
      ]
    },
    {
      "type": "shell",
      "script": "scripts/config_dotfiles.sh",
      "environment_vars": [
        "USERNAME={{ user `username`}}"
      ]
    }
  ]
}
